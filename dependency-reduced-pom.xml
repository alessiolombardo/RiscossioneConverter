<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>alessiolombardo</groupId>
  <artifactId>RiscossioneConverter</artifactId>
  <name>RiscossioneConverter</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>RiscossioneConverter</description>
  <build>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>shade-swing</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <source>1.7</source>
              <target>1.7</target>
              <transformers>
                <transformer>
                  <mainClass>view.RiscossioneConverterGUISwing</mainClass>
                </transformer>
              </transformers>
              <classifier>swing</classifier>
              <outputDirectory>${project.build.outputDirectory}_swing</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>shade-javafx</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <source>1.8</source>
              <target>1.8</target>
              <transformers>
                <transformer>
                  <mainClass>view.RiscossioneConverterGUIJavaFX</mainClass>
                </transformer>
              </transformers>
              <classifier>javafx</classifier>
              <outputDirectory>${project.build.outputDirectory}_javafx</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
  </properties>
</project>

